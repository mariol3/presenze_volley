<%- model_class = Player -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<%= image_tag(@player.avatar.url(:thumb), class: 'img-responsive') %>
<h3 style="display: inline-block;"><%= @player.name %></h3>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              players_path, :class => 'btn'  %>
  <% if @logged_player && (@logged_player.role == 'admin' || @logged_player.id == @player.id) %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_player_path(@player), :class => 'btn' %>
    <% end %>
  <% if @logged_player && @logged_player.role == 'admin' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                player_path(@player),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  <% end %>
</div>
