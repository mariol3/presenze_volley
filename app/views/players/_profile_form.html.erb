<%= form_for @player, :html => {:class => 'form-horizontal', :multipart => true} do |f| %>
    <div class="control-group">
        <%= f.label :name, 'Nome', :class => 'control-label' %>
        <div class="controls">
            <%= f.text_field :name, :class => 'text_field' %>
        </div>
    </div>

    <div class="control-group">
        <%= f.label :email, 'Email', :class => 'control-label' %>
        <div class="controls">
            <%= f.text_field :email, :class => 'text_field' %>
        </div>
    </div>

    <!-- removed for heroku
  <div class="control-group">
    <%= f.label :avatar, 'Immagine profilo', :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :avatar, :class => 'file_field' %>
    </div>
  </div>
  -->

    <% if @logged_player && @logged_player.role == "admin" %>
        <div class="control-group">
            <%= f.label :role, 'Ruolo', :class => 'control-label' %>
            <div class="controls">
                <%= f.select :role, Player::ROLES, :class => 'text_field' %>
            </div>
        </div>
    <% end %>

    <div class="form-actions">
        <%= f.submit 'Salva', :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("Annulla")),
                    request.referrer, :class => 'btn' %>
    </div>
<% end %>
